<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#151B54"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/login_icon"
        />
    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="115dp"
        android:layout_height="43dp"
        app:ccp_textColor="@color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="395dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/imgLogin"
        android:padding="6dp"/>

    <EditText
        android:id="@+id/t1"
        android:layout_width="242dp"
        android:layout_height="43dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter Mobile"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/imgLogin"
        android:layout_toEndOf="@id/ccp"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="392dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_below="@id/ccp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/ic_baseline_arrow_forward"
        app:backgroundTint="#FFE49219" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ccp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="251dp"
        android:text="New User ?"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ccp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="155dp"
        android:backgroundTint="#151B54"
        android:text="Sign Up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ccp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="126dp"
        android:backgroundTint="#151B54"
        android:text="By Signing up. Ypu agree to T&amp;C"
        android:textColor="@color/white" />

</RelativeLayout>


